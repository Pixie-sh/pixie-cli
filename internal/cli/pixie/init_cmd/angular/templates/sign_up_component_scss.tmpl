.sign-up {
  max-width: 400px;
  margin: 0 auto;
  padding: 2rem;

  &__header {
    text-align: center;
    margin-bottom: 2rem;

    h1 {
      font-size: 1.75rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    p {
      color: var(--bs-secondary);
    }
  }

  &__form {
    margin-bottom: 1.5rem;
  }

  &__footer {
    text-align: center;

    p {
      margin: 0;
      color: var(--bs-secondary);

      a {
        color: var(--bs-primary);
        font-weight: 500;
      }
    }
  }
}
