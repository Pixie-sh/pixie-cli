$sidebar-width: 260px;
$sidebar-collapsed-width: 64px;
$topbar-height: 64px;
$transition-speed: 0.3s;

.main-layout {
  display: flex;
  min-height: 100vh;
  background: var(--gray-50);
}

.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: $sidebar-width;
  background: white;
  border-right: 1px solid var(--gray-200);
  display: flex;
  flex-direction: column;
  transition: width $transition-speed ease;
  z-index: 100;

  .sidebar-collapsed & {
    width: $sidebar-collapsed-width;
  }
}

.sidebar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  border-bottom: 1px solid var(--gray-200);
  min-height: $topbar-height;
}

.logo {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  overflow: hidden;
}

.logo-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-600);
  color: white;
  font-weight: 700;
  font-size: 0.875rem;
  border-radius: 0.5rem;
  flex-shrink: 0;
}

.logo-text {
  font-weight: 600;
  color: var(--gray-900);
  white-space: nowrap;
}

.sidebar-toggle {
  padding: 0.5rem;
  background: none;
  border: none;
  color: var(--gray-400);
  cursor: pointer;
  border-radius: 0.375rem;
  transition: color 0.2s, background-color 0.2s;

  &:hover {
    color: var(--gray-600);
    background: var(--gray-100);
  }

  .sidebar-collapsed & {
    display: none;
  }
}

.sidebar-nav {
  flex: 1;
  overflow-y: auto;
  padding: 1rem 0.75rem;
}

.sidebar-footer {
  padding: 1rem;
  border-top: 1px solid var(--gray-200);
}

.main-content {
  flex: 1;
  margin-left: $sidebar-width;
  display: flex;
  flex-direction: column;
  transition: margin-left $transition-speed ease;

  .sidebar-collapsed & {
    margin-left: $sidebar-collapsed-width;
  }
}

.topbar {
  height: $topbar-height;
  background: white;
  border-bottom: 1px solid var(--gray-200);
  display: flex;
  align-items: center;
  padding: 0 1.5rem;
  position: sticky;
  top: 0;
  z-index: 50;
}

.page-content {
  flex: 1;
  padding: 1.5rem;
  overflow-y: auto;
}

// Responsive
@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);

    .sidebar-collapsed & {
      transform: translateX(-100%);
    }

    &.mobile-open {
      transform: translateX(0);
    }
  }

  .main-content {
    margin-left: 0;

    .sidebar-collapsed & {
      margin-left: 0;
    }
  }
}
