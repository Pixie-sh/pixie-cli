.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100%;
}

.navbar-start {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.menu-button {
  display: none;
  padding: 0.5rem;
  background: none;
  border: none;
  color: var(--gray-500);
  cursor: pointer;
  border-radius: 0.375rem;
  transition: color 0.2s, background-color 0.2s;

  &:hover {
    color: var(--gray-700);
    background: var(--gray-100);
  }

  @media (max-width: 768px) {
    display: flex;
  }
}

.navbar-brand {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  text-decoration: none;
}

.brand-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-600);
  color: white;
  font-weight: 700;
  font-size: 0.875rem;
  border-radius: 0.5rem;
}

.brand-text {
  font-weight: 600;
  color: var(--gray-900);
  
  @media (max-width: 640px) {
    display: none;
  }
}

.navbar-end {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.login-link {
  padding: 0.5rem 1rem;
  background: var(--primary-600);
  color: white;
  text-decoration: none;
  border-radius: 0.375rem;
  font-size: 0.875rem;
  font-weight: 500;
  transition: background-color 0.2s;

  &:hover {
    background: var(--primary-700);
  }
}

.user-menu-container {
  position: relative;
}

.user-menu-trigger {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.25rem;
  background: none;
  border: none;
  cursor: pointer;
  border-radius: 0.5rem;
  transition: background-color 0.2s;

  &:hover {
    background: var(--gray-100);
  }
}

.user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--primary-100);
  color: var(--primary-700);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.75rem;
  font-weight: 600;
}

.user-menu {
  position: absolute;
  top: 100%;
  right: 0;
  margin-top: 0.5rem;
  min-width: 200px;
  background: white;
  border-radius: 0.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  border: 1px solid var(--gray-200);
  overflow: hidden;
  z-index: 1000;
}

.user-info {
  padding: 0.75rem 1rem;
}

.user-name {
  font-weight: 500;
  color: var(--gray-900);
}

.user-email {
  font-size: 0.75rem;
  color: var(--gray-500);
}

.menu-divider {
  height: 1px;
  background: var(--gray-200);
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  width: 100%;
  padding: 0.625rem 1rem;
  background: none;
  border: none;
  color: var(--gray-700);
  text-decoration: none;
  font-size: 0.875rem;
  cursor: pointer;
  transition: background-color 0.2s;

  &:hover {
    background: var(--gray-50);
  }

  &.text-error {
    color: var(--error-600);
  }

  i {
    font-size: 1rem;
    color: var(--gray-400);
  }
}
