.input-wrapper {
  display: flex;
  flex-direction: column;
  gap: 0.375rem;

  &.is-disabled {
    opacity: 0.6;
    pointer-events: none;
  }
}

.input-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--gray-700);

  .required-mark {
    color: var(--error-500);
    margin-left: 0.125rem;
  }
}

.input-container {
  position: relative;
  display: flex;
  align-items: center;

  &.has-icon-left .input-field {
    padding-left: 2.5rem;
  }

  &.has-icon-right .input-field {
    padding-right: 2.5rem;
  }
}

.input-field {
  width: 100%;
  padding: 0.625rem 0.875rem;
  font-size: 1rem;
  line-height: 1.5;
  color: var(--gray-900);
  background: white;
  border: 1px solid var(--gray-300);
  border-radius: 0.5rem;
  transition: border-color 0.2s, box-shadow 0.2s;

  &::placeholder {
    color: var(--gray-400);
  }

  &:focus {
    outline: none;
    border-color: var(--primary-500);
    box-shadow: 0 0 0 3px var(--primary-100);
  }

  .has-error & {
    border-color: var(--error-500);

    &:focus {
      box-shadow: 0 0 0 3px var(--error-100);
    }
  }

  &:disabled {
    background: var(--gray-50);
    cursor: not-allowed;
  }
}

.input-icon {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--gray-400);
  pointer-events: none;

  &.left {
    left: 0.875rem;
  }

  &.right {
    right: 0.875rem;
  }
}

.password-toggle {
  position: absolute;
  right: 0.5rem;
  padding: 0.375rem;
  background: none;
  border: none;
  color: var(--gray-400);
  cursor: pointer;
  border-radius: 0.25rem;
  transition: color 0.2s;

  &:hover {
    color: var(--gray-600);
  }

  &:focus {
    outline: none;
    color: var(--primary-500);
  }
}

.input-error {
  font-size: 0.75rem;
  color: var(--error-500);
}

.input-hint {
  font-size: 0.75rem;
  color: var(--gray-500);
}
