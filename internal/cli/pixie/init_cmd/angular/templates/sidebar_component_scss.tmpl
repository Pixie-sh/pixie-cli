.sidebar-nav {
  width: 100%;

  &.collapsed {
    .nav-link {
      justify-content: center;
      padding: 0.75rem;
    }

    .nav-icon {
      margin-right: 0;
    }
  }
}

.nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.nav-item {
  width: 100%;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  width: 100%;
  padding: 0.625rem 0.875rem;
  background: none;
  border: none;
  color: var(--gray-600);
  text-decoration: none;
  font-size: 0.875rem;
  cursor: pointer;
  border-radius: 0.5rem;
  transition: all 0.2s;

  &:hover {
    background: var(--gray-100);
    color: var(--gray-900);
  }

  &.active {
    background: var(--primary-50);
    color: var(--primary-700);

    .nav-icon {
      color: var(--primary-600);
    }
  }

  &.has-children {
    justify-content: flex-start;
  }
}

.nav-icon {
  font-size: 1.125rem;
  color: var(--gray-400);
  flex-shrink: 0;
  transition: color 0.2s;
}

.nav-label {
  flex: 1;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-badge {
  padding: 0.125rem 0.5rem;
  background: var(--primary-100);
  color: var(--primary-700);
  font-size: 0.75rem;
  font-weight: 500;
  border-radius: 9999px;
}

.expand-icon {
  font-size: 0.875rem;
  color: var(--gray-400);
  flex-shrink: 0;
}

.nav-sublist {
  list-style: none;
  margin: 0;
  padding: 0.25rem 0 0.25rem 2.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.125rem;
}

.nav-subitem {
  width: 100%;
}

.nav-sublink {
  display: flex;
  align-items: center;
  padding: 0.5rem 0.875rem;
  color: var(--gray-500);
  text-decoration: none;
  font-size: 0.875rem;
  border-radius: 0.375rem;
  transition: all 0.2s;

  &:hover {
    color: var(--gray-700);
    background: var(--gray-50);
  }

  &.active {
    color: var(--primary-600);
    font-weight: 500;
  }
}
