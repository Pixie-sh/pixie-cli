.loader-container {
  display: flex;
  align-items: center;
  justify-content: center;

  &.has-overlay {
    position: fixed;
    inset: 0;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(2px);
    z-index: 9999;
  }
}

.loader-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.loader {
  border-radius: 50%;
  border: 3px solid var(--gray-200);
  border-top-color: var(--primary-600);
  animation: spin 0.8s linear infinite;

  &-sm {
    width: 1rem;
    height: 1rem;
    border-width: 2px;
  }

  &-md {
    width: 1.5rem;
    height: 1.5rem;
  }

  &-lg {
    width: 2rem;
    height: 2rem;
    border-width: 4px;
  }

  &-xl {
    width: 3rem;
    height: 3rem;
    border-width: 4px;
  }
}

.loader-text {
  font-size: 0.875rem;
  color: var(--gray-600);
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
